<resources>

    <style name="TextStyle"> parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">@string/textWidthHeight</item>
        <item name="android:layout_height">@string/textWidthHeight</item>
        <item name="android:textColor">#800080</item>
